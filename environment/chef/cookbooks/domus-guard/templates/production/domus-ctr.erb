#! /bin/sh
### BEGIN INIT INFO
# Provides:          domus-web
# Required-Start:    $mongod
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Domus Guard Web Server
### END INIT INFO

PATH=/sbin:/bin

. /lib/lsb/init-functions

do_start () {
        log_action_msg "Start DomusGuard Control"
        su -c '/opt/domus/script/start.sh control' - domus
}

case "$1" in
  start)
        do_start
        ;;
  restart|reload|force-reload)
        echo "Error: argument '$1' not supported" >&2
        exit 3
        ;;
  stop)
        log_action_msg "Stop DomusGuard Control"
        su -c '/opt/domus/script/stop.sh control' - domus
        ;;
  *)
        echo "Usage: $0 start|stop" >&2
        exit 3
        ;;
esac
